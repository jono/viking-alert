        <script src="js/viking.dialog.js"></script>
        <script src="../viking.alert.js"></script>
        <script>

            $('#alert').on('click', function() {
                new Viking.Alert({
                    title : 'Hey, Viking.Alerts are sweet!',
                    text   : 'Seriously, they are.',
                    onShow : function() { console.log('shown') },
                    onClose : function() { console.log('closed') }
                })
                .show();
            });


            $('#alert').on('click', function() {
                var MyAlert = Viking.Alert.extend({
                    title : 'Hey, Viking.Alerts are sweet!',
                    text   : 'Seriously, they are.',
                    onShow : function() { console.log('shown') },
                    onClose : function() { console.log('closed') }
                })
                .show();
            });

        </script>
